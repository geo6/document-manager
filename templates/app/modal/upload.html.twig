<div id="modal-upload" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-upload"></i>
                    Upload
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="min-height: 250px;">
                <div class="progress">
                    <div class="progress-bar" id="upload-progress" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <hr>

                <div>
                    <strong>Files :</strong>
                    <ul id="upload-list"></ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                <span id="btn-upload-browse" class="btn btn-primary">
                    <i class="far fa-plus-square"></i>
                    Choose file(s)
                </span>
                <button type="button" id="btn-upload-upload" class="btn btn-outline-primary" disabled="disabled">
                    <i class="fas fa-upload"></i>
                    Upload file(s)
                </button>
            </div>
        </div>
    </div>
</div>
